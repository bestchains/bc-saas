ARG ARCH
FROM golang:1.20.2
WORKDIR /go/src/github.com/bestchains/bc-saas
COPY . .
RUN make binary WHAT=depository GOARCH=${ARCH} GOOS=linux
RUN make binary WHAT=market GOARCH=${ARCH} GOOS=linux

FROM alpine:3.16
COPY --from=0 /go/src/github.com/bestchains/bc-saas/_output/bin/linux/${ARCH}/* /bin/*
WORKDIR /bin